generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid()) @db.Uuid
  login String
  password String
  version Int
  createdAt Int
  updatedAt Int
}

model Artist{
  id String @id @default(uuid()) @db.Uuid
  name String
  grammy Boolean
}

model Album{
  id String @id @default(uuid()) @db.Uuid
  name String
  year Int
  artistId String?

  artist   Artist?  @relation(fields: [artistId], references: [id])
}

model Track{
  id String @id @default(uuid()) @db.Uuid
  name String
  artistId String?
  albumId String?
  duration Int

  artist   Artist?  @relation(fields: [artistId], references: [id])
  album   Album?  @relation(fields: [albumId], references: [id])
}

modeul Favourites{
  artists String[]
  albums String[]
  tracks String[]
}